<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CG.UI.Views.AppHeader">
    
    <HorizontalStackLayout
        Padding="10,5,0,0">
        <Image
            Source="logo_big.png"
            HeightRequest="50"
            HorizontalOptions="Start" />
        
        <VerticalStackLayout
            Padding="10,0,0,0">
            
            <Label
                Text="Header1" 
                HorizontalOptions="Start"
                FontAttributes="Bold"
                Style="{StaticResource Header1Label}"/>

            <Label
                Text="Header2"
                HorizontalOptions="Start"
                FontAttributes="Bold"
                Style="{StaticResource Header2Label}"/>

        </VerticalStackLayout>
    </HorizontalStackLayout>
</ContentView>
